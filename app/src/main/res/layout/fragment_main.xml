<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivityFragment">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"/>

    <ImageView
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginTop="26dp"
        android:id="@+id/logoImageView"
        android:layout_centerHorizontal="true"
        android:elevation="5dp"
        android:src="@drawable/logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/appNameTextView"
        android:textSize="20dp"
        android:text="@string/app_name"
        android:elevation="5dp"
        android:textAlignment="center"
        android:paddingTop="5dp"
        android:layout_below="@+id/logoImageView"
        android:layout_centerHorizontal="true"/>

    <!-- Product Information -->

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_below="@+id/app_bar"
        android:id="@+id/deviceImageView"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="20dp"
        android:elevation="10dp"
        android:src="@drawable/phone_image"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/deviceTextView"
        android:layout_alignRight="@+id/deviceImageView"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:layout_marginTop="8dp"/>

    <!-- CPU Information -->

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_below="@+id/deviceImageView"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/cpuImageView"
        android:elevation="4dp"
        android:src="@drawable/cpu_image"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/cpuTextView"
        android:layout_below="@+id/cpuImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

    <!-- RAM Information -->

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_below="@+id/cpuImageView"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/ramImageView"
        android:elevation="4dp"
        android:src="@drawable/ram_image"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/ramTextView"
        android:layout_below="@+id/cpuImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>


</RelativeLayout>
